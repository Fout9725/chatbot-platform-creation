      "name": "Test webhook OPTIONS request",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "name": "Test help command",
      "method": "POST",
      "path": "/",
      "body": {
        "message": {
          "chat": {"id": 123456789},
          "from": {"id": 123456789, "username": "testuser"},
          "text": "/help"
        }
      },
      "expectedStatus": 200,
      "expectedBody": {
        "ok": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Test callback - free tier",
      "method": "POST",
      "path": "/",
      "body": {
        "callback_query": {
          "id": "test_callback_123",
          "from": {"id": 123456789, "username": "testuser", "first_name": "Test"},
          "message": {
            "chat": {"id": 123456789}
          },
          "data": "tier:free"
        }
      },
      "expectedStatus": 200,
      "expectedBody": {
        "ok": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Test callback - paid tier",
