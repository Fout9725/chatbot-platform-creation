{
  "tests": [
    {
      "name": "OPTIONS request (CORS preflight)",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "name": "Send registration email",
      "method": "POST",
      "path": "/",
      "body": {
        "email": "test@example.com",
        "type": "registration",
        "user_data": {
          "login": "testuser",
          "password": "TestPassword123"
        }
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": "boolean"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Send 2FA code email",
      "method": "POST",
      "path": "/",
      "body": {
        "email": "test@example.com",
        "type": "2fa_code",
        "user_data": {
          "code": "123456"
        }
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": "boolean"
      },
      "bodyMatcher": "partial"
    }
  ]
}
