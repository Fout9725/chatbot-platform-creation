{
  "tests": [
    {
      "name": "OPTIONS request returns CORS headers",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS"
      }
    },
    {
      "name": "POST without message returns 400",
      "method": "POST",
      "path": "/",
      "body": {},
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Message is required"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "POST with message returns AI response",
      "method": "POST",
      "path": "/",
      "body": {
        "message": "Какие тарифы есть на платформе?"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "response": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
